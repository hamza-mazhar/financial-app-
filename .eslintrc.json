{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "root": true,
    "extends": ["plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    },
    "rules": {
        "no-multiple-empty-lines": 0,
        "semi": ["error", "always"],
        "react/jsx-indent": 0,
        "react/prop-types": 0,
        "react/jsx-indent-props": 0,
        "react/jsx-filename-extension": 0
    }
}
